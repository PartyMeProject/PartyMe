<!-- /app/main-page.xml -->
<Page
        xmlns="http://www.nativescript.org/tns.xsd"
        xmlns:maps="nativescript-google-maps-sdk"
        loaded="pageLoaded"
        >
    <GridLayout>
        <maps:mapView latitude="{{ latitude }}"
                      longitude="{{ longitude }}"
                      zoom="{{ zoom }}"
                      bearing="{{ bearing }}"
                      tilt="{{ tilt }}"
                      mapReady="onMapReady"
                      coordinateTapped="onCoordinateTapped"
                      markerSelect="onMarkerSelect"
                      cameraChanged="onCameraChanged"/>
    </GridLayout>
</Page>